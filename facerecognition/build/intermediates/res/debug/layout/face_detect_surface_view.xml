<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <org.opencv.javacv.facerecognition.Tutorial3View
            android:id="@+id/tutorial3_activity_java_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:id="@+id/linlayout">

            <ToggleButton
                android:id="@+id/buttonBuscar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/SSearch"
                android:textOff="@string/SSearch"
                android:textOn="Finish"
                android:layout_row="1"
                android:layout_column="10"
                android:background="#C3C3C3"/>

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/STrain"
                android:textOff="@string/STrain"
                android:textOn="@string/SStopTrain"
                android:background="#C3C3C3"
                 />

            <ToggleButton
                android:id="@+id/toggleButtonGrabar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Grabar"
                android:textOff="Record"
                android:textOn="Stop"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#C3C3C3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catalog"
                android:id="@+id/buttonCatalog"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_gravity="right|bottom"
            android:textColor="#EBEBEB">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yellow"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_red"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_green"
            android:layout_gravity="left|center_vertical" />
        <ImageButton
            android:id="@+id/ivRotate"
            android:layout_width="121dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_rotation"
            android:layout_gravity="right|center_vertical"

            android:padding="0dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_weight="0.71"
            android:text="@string/SFaceName"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="121dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_stat_camera"
            android:layout_gravity="right|top"
            />

        <TextView
            android:id="@+id/textViewState"
            android:layout_width="222dp"
            android:layout_height="32dp"
            android:text="@string/SIdle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="left|bottom" />

    </FrameLayout>

</LinearLayout><!-- From: file:/M:/Android/CIP/cvrecognition/facerecognition/src/main/res/layout/face_detect_surface_view.xml -->